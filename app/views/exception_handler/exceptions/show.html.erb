  <style type="text/css">
    body {
      padding: 30px 20px;
      font-family: -apple-system, BlinkMacSystemFont,
        "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell",
        "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif;
      color: #727272;
      line-height: 1.6;
    }

    .container {
      //max-width: 500px;
      margin: 0 auto;
    }

    h1 {
      margin: 20px 0 30px;
      font-size: 40px;
      line-height: 1;
      color: #252427;
      font-weight: 700;
    }

    h2 {
      margin: 0px 0 0;
      font-size: 20px;
      font-weight: 600;
      letter-spacing: 0.1em;
      color: #A299AC;
    }
	
	h2 a {
	  color: #A299AC;
	  text-decoration: none; 
	}
	
	h2 a:hover {
	  color: #5e5568;
	  text-decoration: none; 
	}

    p {
      font-size: 16px;
      margin: 1em 0;
    }

    .go-back a {
      display: inline-block;
      margin-top: 3em;
      padding: 10px;
      color: #1B1A1A;
      font-weight: 700;
      border: solid 2px #e7e7e7;
      text-decoration: none;
      font-size: 15px;
      text-transform: uppercase;
      letter-spacing: 0.1em;
    }

    .go-back a:hover {
      border-color: #1B1A1A;
    }

    @media screen and (min-width: 768px) {
      body {
        padding: 50px;
      }
    }

    @media screen and (max-width: 480px) {
      h1 {
        font-size: 48px;
      }
    }
  </style>
  
<%#= content_tag :span, "#{@exception.status.to_s} #{@exception.description.html_safe}" %>
<%=
(case @exception.status.to_s
	when "404", "422", "400", "500"
		render "exception_handler/exceptions/#{@exception.status.to_s}"
	else 
		render "exception_handler/exceptions/etc"
	end) 
%>
