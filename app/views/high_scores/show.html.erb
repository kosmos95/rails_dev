<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Show <small>high_score</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li><%= link_to "High_scores", high_scores_path %></li>
      <li class="active">Show</li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to edit_high_score_path(@high_score), :class => 'btn btn-primary' do %>
              <span class="glyphicon glyphicon-pencil"></span>
              Edit
            <% end %>          
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
            <dt>Game:</dt>
            <dd><%= @high_score.game %></dd>

            <dt>Score:</dt>
            <dd><%= @high_score.score %></dd>

            <dt>User:</dt>
            <dd><%= @high_score.user %></dd>

          </dl>
        </div>
      </div>
    </div>
  </div>
</section>

