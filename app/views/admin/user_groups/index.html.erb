<% content_for :content_header  do %>
  <section class="content-header">
    <h1>목록 <small>사용자 그룹</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">boards</li>
    </ol> 
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_admin_user_group_path, :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              New Board 
            <% end %>          
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
              <th>Id</th>
              <th>Name</th>
              <th>회원수</th>
              <th></th>
              <th></th>
              </tr>
            </thead>
            <tbody>
    <% @user_groups.each do |user_group| %>
      <tr>
		<td><%= user_group.id %></td>
        <td><%= user_group.name %></td>
        <td><%= user_group.user&.count %></td>
        <td><%= link_to 'Show', admin_user_group_path(user_group.id) %></td>
        <td><%= link_to 'Edit', edit_admin_user_group_path(user_group) %></td>
        <td><%= link_to 'Destroy', admin_user_group_path(user_group.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

