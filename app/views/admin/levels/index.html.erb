<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listing <small>levels</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">levels</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">

        </div>
        <div class="box-body table-responsive">
          <table class="table ">
            <thead>
              <tr>
				<th rowspan=2>레벨</th>
				<th rowspan=2>명칭</th>
				<th rowspan=2>명수</th>
                <th colspan=5 style="text-align:center; background:#ffbfbf; ">회원등급 자동갱신 수량설정</th>
                <th rowspan=2></th>
              </tr>
              <tr>
                <th>자동갱신 활성화</th>
                <th>접속수</th>
                <th>게시물수</th>
                <th>댓글수</th>
                <th>방문일</th>
              </tr>
            </thead>
            <tbody>
              <%= content_tag_for(:tr, @levels) do |level| %>
                <td><div class="level_icon lv<%=level.level%>"></div> <%= level.level %></td>
                <td><%= level.name %></td>
                <td><%= level.users_count %></td>
                <td><%= level.autoupgrade_enabled? ? "활성" : "---"%></td>
                <td><%= level.autoupgrade_login_num %></td>
                <td><%= level.autoupgrade_post_num %></td>
                <td><%= level.autoupgrade_comment_num %></td>
                <td><%= level.autoupgrade_visit_days %></td>
                <td><%= link_to '수정', edit_admin_level_path(level) %></td> 
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

