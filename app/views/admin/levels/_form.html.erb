<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= form_for(@level, :url=>[:admin, @level], :html => { :role => "form" }) do |f| %>
	  
        <% if @level.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
            <h4><%= pluralize(@level.errors.count, "error") %> 개의 오류로 인해 저장하지 못하였습니다.</h4>

            <ul>
            <% @level.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>            
            </ul>
            
          </div>
        <% end %>

        <div class="form-inputs">

          <div class="form-group">
            <%= f.label "레벨" %>
            <%= f.text_field :level, :class => "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label "명칭" %>
            <%= f.text_field :name, :class => "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label "회원등급 자동갱신 활성화" %>
            <%= f.check_box :enable_autoupgrade, { :class => "" }, "1", "0" %>
          </div>

          <div class="form-group">
            <%= f.label "[회원등급 자동갱신 수량설정] 접속수" %>
            <%= f.text_field :autoupgrade_login_num, :class => "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label "[회원등급 자동갱신 수량설정] 게시물수" %>
            <%= f.text_field :autoupgrade_post_num, :class => "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label "[회원등급 자동갱신 수량설정] 댓글수" %>
            <%= f.text_field :autoupgrade_comment_num, :class => "form-control" %>
          </div>
          
             <div class="form-group">
            <%= f.label "[회원등급 자동갱신 수량설정] 방문일수" %>
            <%= f.text_field :autoupgrade_visit_days, :class => "form-control" %>
          </div>
          
          <div class="form-group">
          <%= f.submit :class => "btn btn-primary" %>
          </div>

        </div>
	  
      <% end %>
	
    </div>
  </div>
</section> 