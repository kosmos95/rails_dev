<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listing <small>menus</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">menus</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_admin_menu_path(@menu), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              New Menu
            <% end %>          
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
              <th>Id</th>
              <th>Name</th>
              <th>Content</th>
              <th>Site</th>
              <th></th>
              <th></th>
              <th></th>
              </tr>
            </thead>
            <tbody>
              <% @menus.each do |menu| %>
              <tr>
              <td><%= menu.id %></td>
              <td><%= menu.name %></td>
              <td><%= menu.content %></td>
              <td><%= menu.site %></td>
              <td><%= link_to 'Show', admin_menu_path(menu) %></td>
              <td><%= link_to 'Edit', edit_admin_menu_path(menu) %></td>
              <td><%= link_to 'Destroy', admin_menu_path(menu), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

