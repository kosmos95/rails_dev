
<%= simple_form_for(@post) do |f| %>

  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  
  <div class="form-inputs">
	
    <div class="postwrite">
      <form name="writeForm" method="post" action="/" target="_action_frame_bbs" onsubmit="return writeCheck(this);">
        <table>
          <tbody> 
            <tr>
              <td class="td1">제목</td>
              <td class="td2">
                <%= f.input :subject, label: false %>
              </td>
            </tr>
          </tbody>
        </table>

        <div class="editbox">
          <%= f.text_area :content, :class => "tinymce", :rows => 20, :cols => 80 %>
          <%= f.input :board_id, :as => :hidden, :input_html => { :value => params[:board_id] } %>
          <%= tinymce_with_default_option %>
        </div>

        <div class="bottombox">
          <input type="button" value="취소" class="btngray" onclick="cancelCheck();">
          <input type="submit" value="확인" class="btnblue">
        </div>
        
      </form>
    </div>
  </div>

<% end %>

