$comment_bg: #f6fafd;

//$comment_depth_bg: #f7f7f7;
//$comment_depth_bg: #f0fbfc;
$comment_depth_bg: #f6fafd;
//$comment_depth_bg: #eafefc;

.comments {
  border:1px solid #eaeaea;
  border-radius: 5px;
  //background-color: #f7f7f7;
  //background-color: #fafafa;
  background-color: $comment_bg;
  margin:20px 0;
  padding:1em;
  
  h2 {
    margin:0 0 .5em;
  }
  
  ul {
    //margin: 0;
    padding-left: 0em;
    padding-top: 1em;
    li {
      padding-top:10px;
      padding-bottom: 10px;
      //margin-bottom: 1em;
      border-bottom: dashed 1px #cccccc; 
      min-height: 70px;
      &:last-child {
        border-bottom: none;
      }
      position:relative;
      
      &.deleted > {
        .comment_item_avatar, .comment_item_header, .comment_form_reply, .comment_item_action { display:none !important;  }
        .comment_item_action2 { display:block; } 
      }
      &:first-child {
        border-top: dashed 1px #cccccc; 
      }
    }
    
  }
  
  .reply_img {
    float:left; 
    //margin-top:5px;
    width:25px;
    height:20px;
    background: url(/common/comment/arrow-reply.png) no-repeat;
	background-size: 15px 18px; 
  }  
  
  .comment_header { 
    font-weight:bold;
    .cmt_count { font-weight: normal; }
  }
  
  .comment_item_body { 
    p {
      font-size: 14px; 
    }
  }
  
  .counter {
    float:right; 
    font-size:10px; 
    .count { 
      color:#ff2626;
      font-weight:bold; 
    }
  }

  %action {
    float: right;
    margin-right:5px; 
    color:#555; 
    > a { 
      color:#555; 
      margin-right:5px; 
      &:hover {
        text-decoration: none; 
      }
	  &.report { color: #aaa; }
    }
    span.sp {
      color: #aaa;
      margin-left: -2px; 
      margin-right: 3px; 
    }
  }
  
  .comment_item_action { 
    @extend %action;
  }
  .comment_item_action2 {
    @extend %action;
    color:#ff2626; 
    a {
      color:#ff2626; 
    }
    display:none; 
  }
  .comment_item_avatar {
    float:left; 
    width:56px; 
    height:60px; 
/*
    .avatar {
      .avatar_image_wrap {
        width:50px; 
        height:50px;
        overflow:hidden;
      }
      .avatar_thumb_image {
        width:100%; 
      }
    }
*/
  }
  .comment_item_header {
    margin-left:90px; 
    margin-bottom: 10px; 
    color:#666; 
    font-size:12px; 
    margin-left: 10px;
    .user { font-weight:bold; margin-right: 5px;}
    .ip {  }
    .time { }
    .favor { }
  }
  .comment_item_body {
    margin-top: 3px; 
    margin-left:90px; 
    .reply_icon {
      float:left; 
    }
    .msg {
      display: block; 
      margin-top: 15px; 
    }
    .cmt_img {
      padding-bottom: 10px; 
      img { max-width: 100%; }
    }
  }
  
  //ul.comment_reply_list, 
  .comment_form_reply {
    padding-left:10px; 
  }
  
  .depth0 { padding-left:0px; background-color: darken($comment_depth_bg, 0%); }
  .depth1 { padding-left:5px; background-color: darken($comment_depth_bg, 2%); }
  .depth2 { padding-left:25px; background-color: darken($comment_depth_bg, 4%); }
  .depth3 { padding-left:45px; background-color: darken($comment_depth_bg, 8%); }
  //.depth4 { padding-left:(20*4-15)px; background-color: darken($comment_depth_bg, 10%); } 
  //.depth5 { padding-left:(20*5-15)px; background-color: darken($comment_depth_bg, 13%); }
  
  .reply_icon { color:#ff0000; font-weight:bold; margin-right:10px; }
  
  .check_new {
    margin:0px 0 10px; 
    width:100%;
    text-align:center; 
    background-color:#c0cfdc; 
    //background-color:#eee; 
    //background-color:#93ebd5;  // 옥색 
    //color: #fff; 
    
    padding:10px; 
    cursor:pointer;
    border-radius:5px; 
	
	i.reply { }
	i.spinner { display:none; }
	
	a, a:hover, a:focus { text-decoration: none; color: #444; }
  } 
  
  .check_new_result {
    width:100%;
    //background: #93ebd5; 
    //background: darken($comment_depth_bg, 13%);
    //background: #fff; 
	background-color: #9cefec;
    padding: 10px; 
    text-align: center; 
    display: none; 
  }
  
  .reply {
  }
  
  .depth0 {
    .reply_img {
        display:none; 
    }
    .comment_item_header, .comment_item_body { 
        margin-left: 65px;
    }
  }
   
}

.comments_form, .comment_item {
  font-size:12px; 
  .image_attach {
    margin-bottom: 10px; 
    input[type=file] { font-size:13px; }
    .form-check { display:inline-block; margin-right:5px; }
    label { font-weight:normal; }
  }
}

